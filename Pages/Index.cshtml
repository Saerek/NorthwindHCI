@page
@using NorthwindHCI.Models.NW
@model IndexModel

@{
    ViewData["Title"] = "Category List";
}

<div class="text-center">
    <h2>Category List</h2>

    <!-- Display only the CategoryName as clickable links -->
    <ul>
        @foreach (var category in Model.Categories)
        {
            <li>
                <a asp-page="/Details" asp-route-id="@category.CategoryId">@category.CategoryName</a>
            </li>
        }
    </ul>

    <!-- Form to add a new category -->
    <h3>Add a New Category</h3>
    <form method="post">
        <div class="form-group">
            <label asp-for="NewCategory.CategoryName"></label>
            <input asp-for="NewCategory.CategoryName" class="form-control" />
            <span asp-validation-for="NewCategory.CategoryName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewCategory.Description"></label>
            <textarea asp-for="NewCategory.Description" class="form-control"></textarea>
            <span asp-validation-for="NewCategory.Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Add Category</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
